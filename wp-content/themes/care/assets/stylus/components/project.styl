.project
	
	padding 30px 0
	
	.container
		display flex
		justify-content space-between
		
	&_title
		font-size 1.5em
		color $green
		margin-bottom 10px
	
	&_logo
		text-align center
		margin-top 150px
		background-color $grey
		img 
			width 40%
			display block
			margin auto
		
	&_left
		width 700px
		border-right 5px solid #d1d1d1
		
	&_right
		width 300px

.sidebar
	
	&_header
		font-size 1.2em
		margin-bottom 15px
	
	&_title
		color $green
		
	&_new
		padding 5px 10px
		
		&:nth-child(odd)
			background-color $grey
		&:nth-child(even)
			background-color lighten($grey, 70%)
		
		a
			display block
			width 100%
			height 100%
		
	&_date
		margin-top 5px
		font-size 0.8em
		text-align right
		color darken($grey, 50%)
		